@model List<Department>
@{
    ViewData["Title"] = "Department List";
}

<h1 style="color: brown; margin-bottom: 10px; padding-bottom:10px" >Department List</h1>

<a style="margin-bottom: 10px" href="/Department/Add" class="btn btn-success">Create new department</a>

<table class="table table-hover table-bordered">
    <tr>
        <th>No.</th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="color: coral; font-weight:bold">
            <td>@item.DepartmentId</td>
            <td>@item.DepartmentName</td>
        </tr>
    }
</table>